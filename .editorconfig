root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.json]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{md,mdx}]
max_line_length = off
trim_trailing_whitespace = false
